  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "allowArbitraryExtensions": true,
    "resolveJsonModule": true
  }
}
